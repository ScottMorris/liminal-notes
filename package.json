{
  "name": "liminal-notes",
  "private": true,
  "version": "0.1.0",
  "description": "Local-first, Markdown-based note-taking app with Obsidian-style linking, built with Tauri + React + TypeScript.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "echo \"(lint to be added by tooling)\"",
    "test": "echo \"(tests to be added by tooling)\"",
    "tauri": "pnpm --filter @liminal-notes/desktop tauri",
    "dev:desktop": "pnpm --filter @liminal-notes/desktop tauri dev",
    "build:desktop": "pnpm --filter @liminal-notes/desktop tauri build",
    "build:appimage:portable": "cd apps/desktop && TAURI_BUNDLER_NEW_APPIMAGE_FORMAT=${TAURI_BUNDLER_NEW_APPIMAGE_FORMAT:-true} TAURI_BUNDLE_TARGETS=appimage ~/.cargo/bin/tauri build",
    "build:packages": "pnpm -r --filter \"./packages/**\" --filter \"./apps/mobile/editor-web\" run build",
    "dev:packages": "pnpm -r --filter \"./packages/**\" --filter \"./apps/mobile/editor-web\" run dev",
    "postinstall": "pnpm build:packages",
    "generate:icons": "node scripts/generate-icons.mjs"
  },
  "devDependencies": {
    "sharp": "^0.34.5",
    "typescript": "^5.8.3"
  }
}
